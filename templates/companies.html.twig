{% extends 'base.html.twig' %}

{% block content %}
<h1>Companies</h1>
<table border=1>
    <tr>
        <th>Name</th>
        <th>Site</th>
        <th>Address</th>
        <th>Phone</th>
        <th></th>
    <tr>
    {% for company in companies %}
    <tr>
        <td>{{ company.name }}</td>
        <td>{{ company.site }}</td>
        <td>{{ company.address }}</td>
        <td>{{ company.phone }}</td>
        <td>
            <a href="{{ path('company_edit', {'id': company.id}) }}">Edit<a/>
            <a href="{{ path('company_delete', {'id': company.id}) }}" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
        </td>
    </tr>
    {% endfor %}
</table>
<br>
<a href="{{ path('company_new') }}"><button>Add company</button></a>
{% endblock %}